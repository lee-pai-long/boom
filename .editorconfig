# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[*.py]
# Docstrings and comments use 72 as max line length (see PEP8).
max_line_length = 79

# The JSON files contain newlines inconsistently.
[*.json]
indent_size = 2
insert_final_newline = ignore

[Makefile]
indent_style = tab

[{*.yml, *.yaml}]
indent_size = 2
